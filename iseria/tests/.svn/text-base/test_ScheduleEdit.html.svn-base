  <script>
    
    Ext.onReady(function() {

    // Setup some default values for the select boxes.
    var today = new Date();
    $('s_yy').setValue(today.getFullYear());
    $('s_mm').setValue(today.getMonth()+1);
    $('s_dd').setValue(today.getDate());
    $('e_yy').setValue(today.getFullYear());
    $('e_mm').setValue(today.getMonth()+1);
    $('e_dd').setValue(today.getDate());

    Event.observe( "start", 'click', function() {
        this.disabled = true;
        // MAIN
        DA.scheduler.EditPage.init({
            rangeSelector: {
                startConfig: {
                    yyNode: $('s_yy'),
                    mmNode: $('s_mm'),
                    ddNode: $('s_dd'),
                    hhNode: $('s_hh'),
                    miNode: $('s_mi'),
                    // ssNode: $('s_ss'),
                    calNode: $('s_cal')
                },
                endConfig: {
                    yyNode: $('e_yy'),
                    mmNode: $('e_mm'),
                    ddNode: $('e_dd'),
                    hhNode: $('e_hh'),
                    miNode: $('e_mi'),
                    // ssNode: $('e_ss'),
                    calNode: $('e_cal')
                },
                commonConfig: {
                    yearList: [2005,2006,2007,2008,2009,2010],
                    holidayList: {
                        2008: {
                            6: {
                                25: 1,
                                26: 1,
                                27: 1
                            }
                        }
                    },
                    lang: 'ja',
                    firstDay: 3
                }
            },
            timeRangeSlider: {
                renderTo:   'slider-container'
            }
        });
 
        // DA_DEBUG_START
        DA.scheduler.EditPage.dateRangeSelector.on('change', function(start, end) {
            console.log("start: "+Object.toJSON(start));
            console.log("end: "+Object.toJSON(end));
        });
        // DA_DEBUG_END

        /*********************************************************************/
        // test code: enable/disable date
        new Ext.Button({
            renderTo: Ext.get('buttons'),
            text: "dateRangeSelector.disableTime()",
            _dateDisabled: false,
            handler: function () {
                if (this._dateDisabled) {
                    DA.scheduler.EditPage.dateRangeSelector.enableTime();
                    this._dateDisabled = false;
                    this.setText("dateRangeSelector.disableTime()");
                } else {
                    DA.scheduler.EditPage.dateRangeSelector.disableTime();
                    this._dateDisabled = true;
                    this.setText("dateRangeSelector.enableTime()");
                }
            }
        });
        /*********************************************************************/

        new Ext.Button({
            renderTo: Ext.get('buttons'),
            text: "Set Today's Date",
            handler: function () {
                var d = new Date();
                DA.scheduler.EditPage.dateRangeSelector.setValue(
                    { yy: d.getFullYear(), mm: d.getMonth()+1, dd: d.getDate() },
                    { yy: d.getFullYear(), mm: d.getMonth()+1, dd: d.getDate() },
                    true /* fire events*/
                );
            }
        });

        new Ext.Button({
            renderTo: Ext.get('buttons'),
            text: "Clear Time",
            handler: function () {
                DA.scheduler.EditPage.clearTime();
            }
        });

    });


    });


