<body>

  <button id="makeDialog">Make Dialogs.</button>
  <button id="showDialog" disabled>Show Dialogs.</button>
  <button id="hideDialog" disabled>Hidden Dialogs.</button>   
  
  <script>
  /*Event.observe(window, 'load', function(){
      DA.log = YAHOO.log; // Just use the YAHOO logger...
      new YAHOO.widget.LogReader(); 
  });*/

  Event.observe( $("makeDialog"), 'click', function() {
      // MAIN
      var message = new DA.widget.MessageDialog (
          "messageDialog", "メッセージダイアログ", "メッセージ内容", {
              onEnter: function() {
                  alert("Message enter");
                  return true;
              },
              
              onCancel: function() {
                  alert("Message cancel");
                  return true;
              }
          }
      );
      
      var string = new DA.widget.StringChangerDialog (
          "stringChangerDialog", "文字列変更ダイアログ", "初期パラメータ", {
              onEnter: function() {
                  alert("String changer enter");
                  return true;
              },
              
              onCancel: function() {
                  alert("String changer cancel");
                  return true;
              }
          }
      );
      
      var upload = new DA.widget.FileUploadDialog (
          "fileUploadDialog", "ファイルアップロードダイアログ", {
              onEnter: function() {
                  alert("File upload enter");
                  return true;
              },
              
              onCancel: function() {
                  alert("File upload cancel");
                  return true;
              }
          }
      );
      
      $("makeDialog").disabled = true;
      $("showDialog").disabled = false;
      $("hideDialog").disabled = false;
      
      Event.observe( $("showDialog"), 'click', function() {
          message.show();
          string.show();
          upload.show();
      });

      Event.observe( $("hideDialog"), 'click', function() {
          message.hide();
          string.hide();
          upload.hide();
      });
  });
  
  </script>

</body>

</html>
