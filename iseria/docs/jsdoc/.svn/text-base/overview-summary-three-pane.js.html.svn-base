        setFirstClass(<span class="reserved">this</span>.rightPane, <span class="literal">"da_rightPane"</span>);
        setFirstClass(<span class="reserved">this</span>.rightTopPane, <span class="literal">"da_rightTopPane"</span>);
        setFirstClass(<span class="reserved">this</span>.rightBottomPane, <span class="literal">"da_rightBottomPane"</span>);

        setFirstClass(<span class="reserved">this</span>.vDivider, <span class="literal">"da_vDivider"</span>);
