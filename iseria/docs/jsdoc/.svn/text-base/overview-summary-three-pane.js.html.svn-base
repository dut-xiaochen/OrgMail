            div.className = cName + <span class="literal">' '</span> + classes.join(<span class="literal">' '</span>);
        } <span class="reserved">else</span> {
            div.className = cName;
        }
    };

    <span class="reserved">if</span> (options) {
        
        <span class="comment">// Copy the options</span>
        Object.extend(<span class="reserved">this</span>, options);

